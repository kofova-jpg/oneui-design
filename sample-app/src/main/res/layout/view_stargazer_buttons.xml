<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stargazer_buttons"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/stargazer_github_btn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="center"
        android:tint="?actionMenuTextColor"
        android:background="?attr/actionBarItemBackground"
        app:srcCompat="@drawable/about_page_github" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/stargazer_twitter_btn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="center"
        android:background="?attr/actionBarItemBackground"
        android:tint="?actionMenuTextColor"
        app:srcCompat="@drawable/x_logo"
        android:visibility="gone"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/stargazer_email_btn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="center"
        android:tint="?actionMenuTextColor"
        android:background="?attr/actionBarItemBackground"
        app:srcCompat="@drawable/ic_oui_email"
        android:visibility="gone"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/stargazer_blog"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="center"
        android:tint="?actionMenuTextColor"
        android:background="?attr/actionBarItemBackground"
        app:srcCompat="@drawable/ic_oui_internet_website"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>